{
  "name": "lastfm-readme",
  "version": "1.7.0",
  "description": "GitHub Action to dynamically update your GitHub README with Last.fm metrics",
  "keywords": [
    "lastfm",
    "actions",
    "readme"
  ],
  "homepage": "https://github.com/dxnter/lastfm-readme#readme",
  "bugs": {
    "url": "https://github.com/dxnter/lastfm-readme/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxnter/lastfm-readme.git"
  },
  "license": "MIT",
  "author": "Danny Foster <danny@foster.sh>",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "dev": "tsx src/development.ts",
    "format": "prettier --write --cache --cache-location=.prettier-cache \"**/*.{ts,js,md,json,yml}\"",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "semantic-release": "semantic-release",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "types": "tsc --project tsconfig.eslint.json --noEmit"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/core": "^7.0.3",
    "chalk": "^5.6.0",
    "cli-table3": "^0.6.5",
    "date-fns": "^4.1.0",
    "lastfm-typed": "^2.1.0",
    "ramda": "^0.31.3",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^24.3.0",
    "@types/ramda": "^0.31.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-gha": "^1.6.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "semantic-release": "^25.0.2",
    "semantic-release-major-tag": "^0.3.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=24.10.0",
    "npm": "please-use-pnpm",
    "pnpm": ">=9.0.0",
    "yarn": "please-use-pnpm"
  }
}
