{
  "name": "lastfm-readme",
  "version": "0.0.0-development",
  "description": "GitHub Action to dynamically update your GitHub README with Last.fm metrics",
  "author": "Danny Foster <danny@foster.sh>",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "lint": "eslint --cache .",
    "format": "prettier --write --cache .",
    "types": "tsc --noEmit",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=18.12.1",
    "pnpm": ">=6.23.6"
  },
  "keywords": [
    "lastfm",
    "actions",
    "readme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dxnter/lastfm-readme"
  },
  "bugs": {
    "url": "https://github.com/dxnter/lastfm-readme/issues"
  },
  "homepage": "https://github.com/dxnter/lastfm-readme#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^18.11.18",
    "@types/ramda": "^0.28.22",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vercel/ncc": "^0.36.0",
    "@vitest/coverage-c8": "^0.28.4",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "semantic-release": "^20.1.0",
    "semantic-release-major-tag": "^0.2.1",
    "typescript": "^4.9.4",
    "vitest": "^0.27.2"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/core": "^4.2.0",
    "lastfm-typed": "^2.1.0",
    "ramda": "^0.28.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
